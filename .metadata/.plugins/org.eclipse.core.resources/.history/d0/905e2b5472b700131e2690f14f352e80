import java.util.ArrayList;
import java.util.HashMap;


public class Questions {

	public HashMap<Integer, String[]> answers;
	public ArrayList<String> firstQuestions;
	
	public Questions()
	{
		/* 0
		 * On  : $2500, raises social by 10
		 * Off : $1500, lowers energy by 10
		 */
		firstQuestions.add("Do you want live on or off campus?");
		String[] arr0 = {"On", "Off"};
		answers.put(0, arr0);
		
		/* 1
		 * Car  : $1000, raises happiness by 10, lowers money by $10/week
		 * Bike : $150, lowers energy by 5
		 * Walk : Lowers energy by 10
		 */
		firstQuestions.add("Do you want a car, a bike, or to just walk campus?");
		String[] arr1 = {"Car", "Bike", "Walk"};
		answers.put(1, arr1);
		
		/* 3
		 * Car  : $1000, raises happiness by 10
		 * Bike : $150, lowers energy by 5
		 * Walk : Lowers energy by 10
		 */
		String[] arr3 = {"Car", "Bike", "Walk"};
		questions.put("Do you want a car, a bike, or to just walk campus?", arr3);
		
		
	}
	
	
}
