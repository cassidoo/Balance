<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/payLoanMsg"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.55"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/send" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:id="@+id/send"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="185dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/userPayAmount" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="$"
        android:id="@+id/dollarSign"
        android:layout_weight="0.08"
        android:layout_alignTop="@+id/send"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/send" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/userPayAmount"
        android:layout_alignBottom="@+id/send"
        android:layout_below="@+id/payLoanMsg"
        android:layout_toRightOf="@+id/dollarSign" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button"
        android:layout_below="@+id/userPayAmount"
        android:layout_toRightOf="@+id/userPayAmount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>